@model IEnumerable<TrailTracker.Models.TrailsInfoListItem>

@{
    ViewBag.Title = "Trail Information";
}
<div class="view-background-2">
    <div class="view-background-6">
        <div class="view-background-1">
            <h2>Trail Information</h2>
            @if (TempData.ContainsKey("SaveResult"))
            {
                <div class="alert alert-success fade in" role="alert">
                    <button type="button" class="close" data-dismiss="alert">
                        <span>&times;</span>
                    </button>
                    @TempData["SaveResult"]
                </div>
            }
            <table class="table table-bordered" id="tableId">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TrailName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Rating)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TrailComments)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NoteableSites)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TrailName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rating)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TrailComments)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoteableSites)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.TrailInfoID }, new { @class = "buttonWhite" })
                            @Html.ActionLink("Details", "Details", new { id = item.TrailInfoID }, new { @class = "buttonWhite" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.TrailInfoID }, new { @class = "buttonWhite" })
                        </td>
                    </tr>
                }
            </table>
            <p>
                @Html.ActionLink("Home", "Index", "Home", null, new { @class = "buttonWhite" })
                @Html.ActionLink("Create New", "Create", null, new { @class = "buttonWhite" })
            </p>
        </div>
    </div>
</div>
